<% provide(:title, "Compare Cells") %>
<%= render "layouts/header" %>
<% if !@compare.errors.empty? %>
    <div class = "alert alert-error">

      <ul>
        <% @compare.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>

    </div>
<% end %>

<div class = "skinny">
  <%= form_for @compare, html: { multipart: true } do |f| %>
      <font color="black">
      <%= f.label :name %>
      <%= f.text_field :name, :required => true%>
      <%= f.label :attachment %>
      <%= f.file_field :attachment, :required => true %>
      <%= f.submit "Save", class: "button" %>
        <%= link_to 'Back', url_for(:back),class: "back"  %>
      </font>
  <% end %>
</div>